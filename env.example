# VNC Connection Configuration
# Copy this file to .env.local and update the values as needed

########################################
# Core API Base (used by apiClient)
# Used in: src/lib/apiclient.ts
# Example (local Nest backend): http://localhost:3001
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001

########################################
# VNC/WebSocket endpoints
# Viewer (noVNC) is typically 6901; automation/action listener typically 8765
# Used in: src/app/(app)/session/page.tsx and src/app/(app)/teacher/page.tsx
NEXT_PUBLIC_VNC_VIEWER_URL=ws://localhost:6901
NEXT_PUBLIC_VNC_WEBSOCKET_URL=ws://localhost:8765

# Browser automation VNC socket used by useLiveKitSession executor
# Used in: src/hooks/useLiveKitSession.ts
# Note: Code defaults to ws://localhost:6901; set to 8765 if your automation runs there
NEXT_PUBLIC_VNC_URL=ws://localhost:6901

########################################
# Session Bubble (websocket hub for actions & sensors)
# Used in: src/app/(app)/session/page.tsx and src/app/(app)/teacher/page.tsx
# Provide your ws:// or wss:// endpoint (leave blank if not using session bubble locally)
NEXT_PUBLIC_SESSION_BUBBLE_URL=

########################################
# LiveKit token service URL
# Used in: src/hooks/useLiveKitSession.ts
# Dev uses http://localhost:3002 automatically; set this for production
NEXT_PUBLIC_WEBRTC_TOKEN_URL=

########################################
# Registration and AI backends
# Used in: src/components/Registrationform.tsx
# Typical local defaults based on current setup
NEXT_PUBLIC_REGISTRATION_API_URL=http://localhost:8000
NEXT_PUBLIC_LANGGRAPH_API_URL=http://localhost:8080

########################################
# Imprinter service (curriculum/session imprinting)
# Used in: src/lib/imprinterService.ts
NEXT_PUBLIC_IMPRINTER_URL=http://localhost:8002

########################################
# LiveKit (used by /api/voice/* routes)
# LIVEKIT_URL should be the ws(s) URL of your LiveKit server, e.g. wss://your-livekit.example.com
# LIVEKIT_API_KEY and LIVEKIT_API_SECRET are server credentials to mint access tokens
# LIVEKIT_AGENT_NAME should match the agent worker's configured agent name (so it auto-joins the room)
LIVEKIT_URL=
LIVEKIT_API_KEY=
LIVEKIT_API_SECRET=
LIVEKIT_AGENT_NAME=my-voice-agent

########################################
# Optional external Voice service base
# If set, /api/voice/start-bot will proxy to `${VOICE_BASE}/voice/start-bot`
# If empty, start-bot will be a no-op (agent should auto-join via token roomConfig)
VOICE_BASE=

########################################
# Clerk authentication
# NEXT_PUBLIC_* are safe for the browser; CLERK_SECRET_KEY is server-only
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/login
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/register
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=

# Google Custom Search (Image) â€“ required for /api/images
# Copy these into .env.local with your real values
# Get an API key: https://console.cloud.google.com/apis/credentials
# Create a CSE (cx): https://cse.google.com/cse/all and enable Image Search
GOOGLE_CSE_API_KEY=
GOOGLE_CSE_CX=
